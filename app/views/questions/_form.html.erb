<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.number_field :difficulty %>
  </div>
  <div class="field">
    <%= f.label :questiontext %><br>
    <%= f.text_field :questiontext %>
  </div>
  <div class="field">
    <%= f.label :answertext %><br>
    <%= f.text_field :answertext %>
  </div>
  <div class="field">
    <%= select_tag "medium", options_for_select(Medium.all.collect{|p| [p.name.to_s, p.id.to_s] }), {class: "form-control" } %>
  </div>
  <div class="field">
    <%= select_tag "category", options_for_select(Category.all.collect{|p| [p.name.to_s, p.id.to_s] }), {class: "form-control" } %>
  </div>
  <div class="field">
    <%= select_tag "questiontype", options_for_select(QuestionType.all.collect{|p| [p.name.to_s, p.id.to_s] }), {class: "form-control" } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
